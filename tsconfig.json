{
  "compilerOptions": {
    "target": "es2017",
    "outDir": "./build/",
    "noImplicitAny": true,
    "lib": ["dom", "es2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "es2020",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx"
  },
  "include": ["src", "src/custom.d.ts", "setupTests.ts", "mocks"]
}
